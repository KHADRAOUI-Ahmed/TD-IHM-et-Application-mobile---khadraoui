<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/event_form_activity_title"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:gravity="center_horizontal"
        android:text="@string/input_form_activity_title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/input_form_activity_input_field"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textShortMessage"
        tools:targetApi="o" />

    <Button
        android:id="@+id/input_form_activity_add_button"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="@string/input_form_activity_add_button" />

    <Button
        android:id="@+id/input_list_form_activity_button"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:text="@string/input_form_activity_list_button" />

</LinearLayout>